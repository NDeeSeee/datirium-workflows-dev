#############################################
# BASE IMAGE SELECTION
#############################################
# Incremental build from previous version
FROM biowardrobe2/scidap-deseq:v0.0.65
LABEL maintainer="pavlvalera3301@gmail.com"
ENV DEBIAN_FRONTEND=noninteractive

#############################################
# SCRIPT UPDATES
#############################################
# Copy updated script files with the fixed argument parsing
COPY tools/dockerfiles/scripts/run_deseq_lrt_step_1.R /usr/local/bin/run_deseq_lrt_step_1.R
COPY tools/dockerfiles/scripts/run_deseq_lrt_step_2.R /usr/local/bin/run_deseq_lrt_step_2.R
COPY tools/dockerfiles/scripts/get_gene_n_tss.R /usr/local/bin/get_gene_n_tss.R
COPY tools/dockerfiles/scripts/run_deseq_pairwise.R /usr/local/bin/run_deseq_pairwise.R

# Copy function directories with updated cli_args.R
COPY tools/dockerfiles/scripts/functions/ /usr/local/bin/functions/

#############################################
# FINALIZE IMAGE
#############################################
# Setting permissions
RUN chmod +x /usr/local/bin/run_deseq_pairwise.R && \
    chmod +x /usr/local/bin/run_deseq_lrt_step_1.R && \
    chmod +x /usr/local/bin/run_deseq_lrt_step_2.R && \
    chmod +x /usr/local/bin/get_gene_n_tss.R && \
    chmod -R +r /usr/local/bin/functions/ && \
    find /usr/local/bin/functions -name "*.R" -exec chmod +x {} \; && \
    apt-get clean && \
    apt-get purge && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/* && \
    strip /usr/local/bin/*; true

#############################################
# FULL BUILD INSTRUCTIONS (COMMENTED)
#############################################
